@model List<Mazewear_clothing.DAL.Tbl_Category>
@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<html>

<head>
    <link rel="stylesheet" href="cdn.datatables.net /1.13.6/css/jquery.dataTables.min.css" />
    <script src="cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
</head>
<body>
    <div class="container-fluid">

        <!-- Breadcrumbs-->
        <div class="card h3">
            <div class="card-body">
            <ol class="breadcrumb mb-2 mt-2">
                <li class="breadcrumb-item">
                    <a href="../Admin/Dashboard">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">Categories</li>
            </ol>
                </div>
        </div>


        <!-- Categories Data -->


        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-table fa-2x"></i>
                <b class="h3">Category Details</b>
                <a href="../Admin/AddCategory" class="btn btn-info pull-right">+ Add New</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="Categories" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Sr. No.</th>
                                <th>Category Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Sr. No.</th>
                                <th>Category Name</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td>@(Model.IndexOf(item)+1)</td>
                                    <td>@item.CategoryName</td>
                                    <td>
                                        @Html.ActionLink("Edit","CategoryEdit", new { catId = item.CategoryId})
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>


</body>
</html>